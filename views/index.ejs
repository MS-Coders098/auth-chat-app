<%- include('./partials/header.ejs') %>
<link rel="stylesheet" href="/stylesheets/index.css">

<main class="my-container">
    <section class="intro">
        <h1 class="text-3xl font-bold tracking-tight font-serif">Welcome to Our
            Website</h1>
        <p class="text-xl mt-3 tracking-tighter font-light">This is an
            introductory section with some text about the website.</p>
    </section>
    <section class="user-info">
        <% if (user.profilePic) { %>
        <img
            src="data:image/jpeg;base64,<%= user.profilePic.toString('base64') %>"
            alt="User Image" class="user-image">
        <% } else { %>
        <img src="/images/user.jpeg" alt="User Image" class="user-image">
        <% } %>
        <h2 class="user-name"><%= user.fullname ? user.fullname : "None" %></h2>
        <p class="user-email"><%= user.email %></p>
    </section>
    <section class="form-section">
        <h1 class="text-2xl mb-4 font-bold mt-3">Update Your Details</h1>
        <form class="form-data" action="/api/updateuser" method="POST"
            enctype="multipart/form-data">
            <div class="form-group">
                <input type="text" placeholder="Enter Fullname"
                    class="outline-none" id="text-field" name="fullname"
                    required>
            </div>
            <div class="form-group">
                <input type="file" id="file-field" name="profilePic" required>
            </div>
            <button type="submit" class="submit-btn">Submit</button>
        </form>
    </section>
    <div id="button-check" class="">
        <a href="/chat" 
            class="start-chatting-btn cursor-pointer inline-block mt-10 bg-green-500 text-zinc-100 px-6 py-3 rounded text-xl">Start
            Chatting</a>
            <a href="" class="cursor-pointer inline-block mt-10 bg-red-500 text-zinc-100 px-6 py-3 rounded text-xl">Logout</a>
    </div>
</main>

<%- include('./partials/footer.ejs') %>